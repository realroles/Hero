const express = require('express');
const multer = require('multer');
const cors = require('cors');
const path = require('path');
const fs = require('fs');

const app = express();
app.use(cors());
app.use(express.static('translated')); // Serve static translated videos

const upload = multer({ dest: 'uploads/' });

app.post('/api/translate', upload.single('video'), async (req, res) => {
  const lang = req.body.language;
  const videoPath = req.file.path;

  // 🔁 Here you should process and translate video (using FFmpeg, Whisper, Google Translate, etc.)
  const translatedPath = `translated/${req.file.filename}-translated.mp4`;

  // 👇 For demo, let's just copy original video as "translated"
  fs.copyFile(videoPath, translatedPath, (err) => {
    if (err) return res.json({ success: false });

    const url = `${req.protocol}://${req.get('host')}/${path.basename(translatedPath)}`;
    res.json({ success: true, downloadUrl: url });
  });
});

const PORT = process.env.PORT || 3001;
app.listen(PORT, () => console.log(`Backend running on port ${PORT}`));